<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="BUY STOCK"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textSize="20sp"
        android:textColor="@color/price"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/buyDialogCompanyName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Demo Company name that is very big in size"

            style="@style/TextAppearance.AppCompat.Headline"
            android:textSize="16sp"
            android:textColor="@color/companyName"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BADcompanyCode"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="ADANI-PORTS"
                android:textColor="@color/companyName"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/buyDialogCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content"
                android:text="INR 420.00"
                android:layout_marginTop="5dp"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/price"
                />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textview5"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Quantity"
            style="@style/TextAppearance.AppCompat.Headline"
            android:textSize="16sp"
            android:textColor="@color/values"
            />
        <EditText
            android:id="@+id/buyNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:maxLength="5"
            android:textColor="@color/values"
            android:textColorHint="@color/values"
            android:hint="Number of Stocks"
            android:inputType="number"
            android:backgroundTint="@color/companyName"
            android:textSize="14sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textview6"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Debit Amount:"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16sp"
                android:textColor="@color/values"
                />
            <TextView
                android:id="@+id/debitAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR 0"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16sp"
                android:textColor="@color/price"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textview7"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avilable Balance"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16sp"
                android:textColor="@color/values"
                />
            <TextView
                android:id="@+id/buyDAviBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR 0"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="16sp"
                android:textColor="@android:color/holo_green_light"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBADCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancle"
            android:textColor="@color/companyName"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBADBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="buy"
            android:textColor="@color/companyName"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />
    </LinearLayout>


</LinearLayout>